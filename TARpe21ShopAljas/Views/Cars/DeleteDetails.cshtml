@model TARpe21ShopAljas.Models.Car.CarDeleteDetailsViewModel
@{
    string displaystring = "";
}

<h1>Details</h1>

<div>

    <h4>Car</h4>
    <hr />
    <dl>
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Id)
        </div>

        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Name)
        </div>

        <div class="form-group row">
            <label asp-for="Transmission" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Transmission)
        </div>

        <div class="form-group row">
            <label asp-for="Horsepower" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Horsepower)
        </div>

        <div class="form-group row">
            <label asp-for="FuelType" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.FuelType)
        </div>

        <div class="form-group row">
            <label asp-for="ZeroToSixty" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.ZeroToSixty)
        </div>

        <div class="form-group row">
            <label asp-for="DriveTrain" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.DriveTrain)
        </div>

        <div class="form-group row">
            <label asp-for="Previously_Owned" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Previously_Owned)
        </div>

        @foreach (var images in Model.Image)
        {
            <partial name="_Images" model="images" />
        }

    </dl>
    <a asp-action="Index" asp-controller="cars" class="btn btn-danger">Cancel</a>

</div>